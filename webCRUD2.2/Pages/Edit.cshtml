@page
@model webCRUD2._2.Pages.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="empleado.empid" />
            <div class="form-group">
                <label asp-for="empleado.empnom" class="control-label"></label>
                <input asp-for="empleado.empnom" class="form-control" />
                <span asp-validation-for="empleado.empnom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empleado.email" class="control-label"></label>
                <input asp-for="empleado.email" class="form-control" />
                <span asp-validation-for="empleado.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empleado.salario" class="control-label"></label>
                <input asp-for="empleado.salario" class="form-control" />
                <span asp-validation-for="empleado.salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
